@page "/AddManufacturer"
@using BlazorCRUD.Entities
@using BlazorCRUD.Contracts
@inject IManufacturersManager manufacturersManager
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager
<h1>
    Add manufacturer
</h1>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input for="Name" class="form-control" @bind-value="@manufacturer.Name" />
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" @onclick="() => CreateManufacturer()">Save</button>
                <button type="button" class="btn btn-danger" @onclick="() => cancel()">Cancel</button>
            </div>
        </form>
    </div>
</div>

@code { Manufacturer manufacturer = new Manufacturer();

    protected async Task CreateManufacturer()
    {
        await manufacturersManager.Create(manufacturer);
        navigationManager.NavigateTo("/manufacturerlist");
    }

    void cancel()
    {
        navigationManager.NavigateTo("/manufacturerlist");
    } }